<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="3">

    <EditText
        android:id="@+id/editName"
        style="@style/editText"
        android:layout_row="0"
        android:layout_column="0"
        android:hint="@string/group_name"
        android:inputType="text" />

    <EditText
        android:id="@+id/editNoOfPerson"
        style="@style/editText"
        android:layout_row="1"
        android:layout_column="0"
        android:hint="@string/no_of_persons"
        android:inputType="number" />

    <EditText
        android:id="@+id/editAmount"
        style="@style/editText"
        android:layout_row="2"
        android:layout_column="0"
        android:hint="@string/amount"
        android:inputType="numberDecimal" />

    <AutoCompleteTextView
        android:id="@+id/editPeridType"
        style="@style/editText"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_marginTop="10dp"
        android:hint="Select Period"
        android:inputType="textAutoComplete" />

    <AutoCompleteTextView
        android:id="@+id/editStartDate"
        style="@style/editText"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_marginTop="10dp"
        android:hint="@string/start_date"
        android:inputType="textAutoComplete" />

    <EditText
        android:id="@+id/editBondCharge"
        style="@style/editText"
        android:layout_row="5"
        android:layout_column="0"
        android:hint="@string/bond_charge"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/lblTotalAmount"
        style="@style/editText"
        android:layout_row="6"
        android:layout_column="0"
        android:hint="Total Amount"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        android:textSize="40dp" />

    <ImageButton
        android:id="@+id/btnSave"
        style="@style/styleBtnSave"
        android:layout_row="7"
        android:layout_column="0"
        android:layout_columnSpan="2" />
</GridLayout>