<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.GroupPerson.GroupPersons">

    <GridLayout android:layout_columnWeight="@integer/config_navAnimTime"
        android:layout_row="0"
        android:columnCount="3"
        android:id="@+id/editPart">

        <TextView
            android:id="@+id/editGroup"
            style="@style/editText"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:inputType="text"
            android:text="Group1" />

        <AutoCompleteTextView
            android:id="@+id/editPerson"
            style="@style/spnStyle"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:autofillHints="Person Name"
            android:inputType="textAutoComplete" />

        <ImageButton
            android:id="@+id/btnSave"
            style="@style/styleBtnSave"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnSpan="3"/>
    </GridLayout>

    <GridView android:layout_columnWeight="@integer/config_navAnimTime"
        android:id="@+id/gvPersons"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_marginTop="15dp" />
</GridLayout>