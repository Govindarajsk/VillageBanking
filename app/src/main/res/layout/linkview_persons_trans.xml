<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="50dp"
    tools:context=".ui.Transaction.PersonTrans">

    <AutoCompleteTextView
        android:id="@+id/editPerson"
        style="@style/stylDgTxt"
        android:layout_width="match_parent"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:hint="Person Name"
        android:inputType="textAutoComplete" />

    <AutoCompleteTextView
        android:id="@+id/editPeriod"
        style="@style/stylDgTxt"
        android:layout_width="match_parent"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:layout_marginTop="10dp"
        android:hint="@string/start_date"
        android:inputType="textAutoComplete" />

    <TextView android:visibility="gone"
        style="@style/styLbl"
        android:layout_row="2"
        android:layout_column="0"
        android:text="Total :" />

    <TextView android:visibility="gone"
        style="@style/styLbl"
        android:layout_row="3"
        android:layout_column="0"
        android:text="Paid :" />

    <TextView
        style="@style/styLbl"
        android:layout_row="4"
        android:layout_column="0"
        android:text="Balance :" />

    <TextView
        android:id="@+id/txtTotal"
        style="@style/styLbl"
        android:layout_width="100dp"
        android:layout_row="2"
        android:layout_column="1"
        android:text="11000.00" />

    <TextView
        android:id="@+id/txtPaid"
        style="@style/styLbl"
        android:layout_width="100dp"
        android:layout_row="3"
        android:layout_column="1"
        android:text="10000.00" />

    <TextView
        android:id="@+id/txtBalance"
        style="@style/styLbl"
        android:layout_width="100dp"
        android:layout_row="4"
        android:layout_column="1"
        android:text="1000.00" />


    <ImageButton
        android:id="@+id/btnSave"
        style="@style/styleBtnSave"
        android:layout_row="3"
        android:layout_rowSpan="2"
        android:layout_column="2"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_gravity="bottom"
        android:tooltipText="Confirm" />

    <GridView android:layout_marginTop="25dp"
        android:layout_marginRight="25dp"
        android:id="@+id/gvGridView"
        android:layout_height="match_parent"
        android:layout_row="6"
        android:layout_column="0"
        android:layout_columnSpan="3" />
</GridLayout>