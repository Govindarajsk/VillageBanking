<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="3"
    tools:context=".ui.Transaction.TransEdit">


    <EditText
        android:id="@+id/editFName"
        style="@style/editText"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_columnWeight="@integer/config_navAnimTime"
        android:hint="Remarks"
        android:inputType="text" />

    <EditText
        android:id="@+id/editLName"
        style="@style/editText"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_columnWeight="@integer/config_navAnimTime"
        android:hint="@string/last_name"
        android:inputType="text" />


    <EditText
        android:id="@+id/editMobile"
        style="@style/editText"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_columnWeight="@integer/config_navAnimTime"
        android:hint="@string/mobile"
        android:inputType="number"
        android:maxLength="10" />

    <EditText
        android:id="@+id/editRef1"
        style="@style/editText"
        android:layout_row="3"
        android:layout_column="1"
        android:layout_columnWeight="@integer/config_navAnimTime"
        android:hint="Reference by 1"
        android:inputType="textAutoComplete" />

    <EditText
        android:id="@+id/editRef2"
        style="@style/editText"
        android:layout_row="4"
        android:layout_column="1"
        android:layout_columnWeight="@integer/config_navAnimTime"
        android:hint="Reference by 2"
        android:inputType="textAutoComplete" />
    <ImageButton
        android:id="@+id/btnSave"
        style="@style/styleBtnSave"
        android:layout_row="5"
        android:layout_column="0"
        android:layout_columnSpan="3"/>
</GridLayout>