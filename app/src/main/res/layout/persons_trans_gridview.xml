<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/maingrid"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="5"
    android:layoutDirection="locale"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtDetails"
        style="@style/stylDgTxt"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_columnWeight="@integer/config_navAnimTime"
        android:text="Group1"
        android:maxWidth="100dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/txtAmount"
        style="@style/stylDgTxt"
        android:layout_row="1"
        android:layout_column="1"
        android:text="4000"
        android:minWidth="70dp"
        android:textAlignment="viewEnd"
        android:textStyle="bold" />

    <CheckBox android:visibility="gone"
        android:id="@+id/chkIsFull"
        android:layout_row="1"
        android:layout_column="2"
        android:minWidth="15dp"
        android:layout_gravity="center_vertical"
        android:checked="false" />

    <TextView
        android:id="@+id/txtNewAmount"
        style="@style/stylDgTxt"
        android:layout_row="1"
        android:layout_column="3"
        android:text="4000"
        android:textStyle="bold"
        android:minWidth="80dp"
        android:textAlignment="viewEnd"
        android:inputType="numberDecimal"/>

    <ImageButton android:visibility="gone"
        android:id="@+id/btnDelete"
        style="@style/styleBtnReset"
        android:layout_row="1"
        android:layout_column="4"/>

    <GridView
        android:layout_columnSpan="5"
        android:id="@+id/gvTransDetail"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_row="3"
        android:layout_column="0"
        android:layout_columnSpan="4"
        android:layout_columnWeight="@integer/config_navAnimTime"
        android:layout_gravity="top"
        android:height="1dp"
        android:background="#c2bfb6"
        android:gravity="top" />
</GridLayout>