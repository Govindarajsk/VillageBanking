<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/maingrid"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="6"
    android:layoutDirection="locale"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtSNo"
        style="@style/stylDgTxt"
        android:layout_row="0"
        android:layout_column="0"
        android:text="01."
        android:layout_width="20dp"
        android:layout_height="25dp"
        android:textAlignment="viewEnd"/>

    <TextView
        android:id="@+id/txtTransDate"
        style="@style/stylDgTxt"
        android:layout_row="0"
        android:layout_column="1"
        android:text="12/05/1989" />

    <TextView
        android:id="@+id/lblRepayAmount"
        style="@style/stylDgTxt"
        android:layout_row="0"
        android:layout_column="3"
        android:maxLength="8"
        android:text="40000.00"
        android:textAlignment="viewEnd"
        android:layout_marginRight="20dp"/>
    <TextView
        android:id="@+id/txtGroupName"
        style="@style/stylDgTxt"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_columnSpan="5"
        android:layout_columnWeight="@integer/config_navAnimTime"
        android:text="Group 1" />

    <ImageButton
        android:id="@+id/btnDelete"
        style="@style/styleBtnDelete"
        android:layout_column="4"
        android:layout_row="0" />

    <ImageButton
        android:id="@+id/btnEMI"
        style="@style/styleBtnDetail"
        android:layout_column="5"
        android:layout_row="0"  />

    <TextView
        android:layout_row="3"
        android:layout_column="0"
        android:layout_columnSpan="6"
        android:layout_columnWeight="@integer/config_navAnimTime"
        android:layout_gravity="top"
        android:height="1dp"
        android:background="#c2bfb6"
        android:gravity="top" />

</GridLayout>