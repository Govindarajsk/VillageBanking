<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/maingrid"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="6"
    android:layoutDirection="locale"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtSNo"
        style="@style/stylDgTxt"
        android:layout_row="0"
        android:layout_rowSpan="2"
        android:layout_column="0"
        android:layout_gravity="top"
        android:text="1."
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtPersonName"
        style="@style/stylDgTxt"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_columnSpan="2"
        android:layout_columnWeight="@integer/config_navAnimTime"
        android:text="Govindaraj"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtLoanAmount"
        style="@style/stylDgTxt"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_columnWeight="@integer/config_navAnimTime"
        android:maxLength="8"
        android:text="Amount"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtGroupName"
        style="@style/stylDgTxt"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_columnSpan="5"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="20dp"
        android:minWidth="120dp"
        android:text="Group 1"
        android:textAlignment="gravity"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/btnDelete"
        style="@style/styleBtnDelete"
        android:layout_row="0"
        android:layout_rowSpan="2"
        android:layout_column="3" />

    <ImageButton
        android:id="@+id/btnEdit"
        style="@style/styleBtnDetail"
        android:layout_row="0"
        android:layout_rowSpan="2"
        android:layout_column="4" />

    <TextView
        android:layout_row="3"
        android:layout_column="0"
        android:layout_columnSpan="6"
        android:layout_columnWeight="@integer/config_navAnimTime"
        android:layout_gravity="top"
        android:height="1dp"
        android:background="#c2bfb6"
        android:gravity="top" />

</GridLayout>