<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/maingrid"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="4"
    android:layoutDirection="locale"
    android:orientation="vertical">

    <TextView
        style="@style/txtLebel"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_gravity="top"
        android:minWidth="125dp"
        android:text="Group Name :"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtGrpName"
        style="@style/stylDgTxt"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_columnSpan="3"
        android:layout_columnWeight="@integer/config_navAnimTime"
        android:text="Group 1"
        android:textStyle="bold" />

    <TextView
        style="@style/txtLebel"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_gravity="top"
        android:text="No of Persons :"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtNoPerson"
        style="@style/stylDgTxt"
        android:layout_row="1"
        android:layout_column="1"
        android:text="10"
        android:textStyle="bold" />

    <TextView
        style="@style/txtLebel"
        android:layout_row="1"
        android:layout_column="2"
        android:layout_columnWeight="@integer/config_navAnimTime"
        android:layout_gravity="top"
        android:text="Amount :"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtAmount"
        style="@style/stylDgTxt"
        android:layout_row="1"
        android:layout_column="3"
        android:layout_marginRight="20dp"
        android:inputType="number"
        android:text="4000.00"
        android:textAlignment="viewEnd"
        android:textStyle="bold" />

    <TextView
        style="@style/txtLebel"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_gravity="top"
        android:text="Amount :"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtActualDate"
        style="@style/stylDgTxt"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_columnSpan="2"
        android:layout_columnWeight="@integer/config_navAnimTime"
        android:text="12/05/1989"
        android:textStyle="bold" />

    <GridLayout
        android:layout_row="3"
        android:layout_column="0"
        android:layout_columnSpan="4"
        android:layout_columnWeight="@integer/config_navAnimTime"
        android:columnCount="5">

        <TextView
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnWeight="@integer/config_navAnimTime"
            android:width="30dp" />

        <Button
            android:id="@+id/btnDelete"
            style="@style/stylDgbtn"
            android:layout_row="3"
            android:layout_column="1"
            android:background="@color/design_default_color_error"
            android:text="D"
            app:backgroundTintMode="screen" />

        <TextView
            android:layout_row="3"
            android:layout_column="2"
            android:width="30dp" />

        <Button
            android:id="@+id/btnPersonDetail"
            style="@style/stylDgbtn"
            android:layout_row="3"
            android:layout_column="3"
            android:background="@color/design_default_color_error"
            android:text="D"
            app:backgroundTintMode="screen" />
    </GridLayout>
</GridLayout>