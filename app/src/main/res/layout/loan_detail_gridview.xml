<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/maingrid"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="4"
    android:layoutDirection="locale"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtInstallment"
        style="@style/stylDgTxt"
        android:layout_row="0"
        android:layout_column="0"
        android:text="10"
        android:minWidth="50dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/txtPeriodName"
        style="@style/stylDgTxt"
        android:layout_row="0"
        android:layout_column="1"
        android:text="12/05/1989"
        android:layout_columnWeight="@integer/config_navAnimTime"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtInstallAmount"
        style="@style/stylDgTxt"
        android:layout_row="0"
        android:layout_column="2"
        android:text="400000.00"
        android:minWidth="100dp"
        android:textStyle="bold" />
    <ImageButton android:layout_gravity="top"
        android:id="@+id/btnDelete"
        style="@style/styleBtnDelete"
        android:layout_column="3"
        android:layout_row="0" />
</GridLayout>
