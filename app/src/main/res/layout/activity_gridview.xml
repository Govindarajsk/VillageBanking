<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0a8a2c"
    android:columnCount="4"
    android:layoutDirection="locale"
    android:layoutMode="opticalBounds"
    android:orientation="vertical"
    android:padding="1dp">

    <TextView
        android:id="@+id/txtColumn1"
        style="@style/stylDgTxt"
        android:layout_row="0"
        android:layout_rowSpan="2"
        android:layout_column="0"
        android:text="1."
        android:textAlignment="viewStart"
        android:textSize="30dp"
        android:textStyle="bold"
        android:visibility="visible" />

    <TextView
        android:id="@+id/txtColumn2"
        style="@style/stylDgTxt"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_columnWeight="@integer/config_navAnimTime"
        android:text="Govindaraj"
        android:textSize="20dp"
        android:textStyle="bold"
        android:visibility="visible" />

    <TextView
        android:id="@+id/txtColumn3"
        style="@style/stylDgTxt"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_columnWeight="@integer/config_navAnimTime"
        android:text="Pavithra"
        android:textSize="10dp"
        android:textStyle="bold"
        android:visibility="visible" />

    <TextView
        android:id="@+id/txtColumn4"
        style="@style/stylDgTxt"
        android:layout_row="0"
        android:layout_rowSpan="2"
        android:layout_column="2"
        android:layout_marginRight="20dp"
        android:minWidth="120dp"
        android:text="9840233286"
        android:textAlignment="viewEnd"
        android:textSize="30dp"
        android:textStyle="bold"
        android:visibility="visible" />
</GridLayout>