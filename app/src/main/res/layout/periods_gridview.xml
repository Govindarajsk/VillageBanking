<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/maingrid">

    <GridLayout android:layout_gravity="top"
        android:layout_width="match_parent"
        android:columnCount="7"
        android:background="@color/design_default_color_surface"
        android:layoutDirection="locale"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtSNo"
            style="@style/stylDgTxt"
            android:layout_width="26dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="top"
            android:text="10."
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtPeriodType"
            style="@style/stylMLineText"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtActualDate"
            style="@style/stylDgTxt"
            android:layout_row="0"
            android:layout_column="1"
            android:text="12/05/1989"
            android:textStyle="bold" />


        <ImageButton
            android:id="@+id/btnDelete"
            style="@style/styleBtnDelete"
            android:layout_row="0"
            android:layout_rowSpan="2"
            android:layout_column="3"
            android:layout_gravity="top" />

        <ImageButton
            android:id="@+id/btnEdit"
            style="@style/styleBtnEdit"
            android:layout_row="0"
            android:layout_rowSpan="2"
            android:layout_column="4"
            android:layout_gravity="top"/>

        <ImageButton
            android:id="@+id/btnDetail"
            style="@style/styleBtnDetail"
            android:layout_row="0"
            android:layout_rowSpan="2"
            android:layout_column="5"
            android:layout_gravity="top"
            android:layout_marginLeft="0dp" />

        <ImageButton
            android:id="@+id/btnClose"
            style="@style/styleBtnClose"
            android:layout_row="0"
            android:layout_rowSpan="2"
            android:layout_column="6"
            android:layout_gravity="top"
            android:layout_marginLeft="0dp" />
    </GridLayout>

    <TextView
        android:layout_row="1"
        android:layout_column="0"
        android:layout_columnSpan="7"
        android:layout_columnWeight="@integer/config_navAnimTime"
        android:layout_gravity="top"
        android:height="1dp"
        android:background="#c2bfb6"
        android:gravity="top" />
</GridLayout>