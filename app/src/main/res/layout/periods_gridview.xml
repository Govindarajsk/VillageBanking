<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/maingrid"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="6"
    android:layoutDirection="locale"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtSNo"
        style="@style/stylDgTxt"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_gravity="top"
        android:text="1."
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtPeriodType"
        style="@style/stylDgTxt"
        android:layout_row="0"
        android:layout_column="1"
        android:text="Period 1"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtActualDate"
        style="@style/stylDgTxt"
        android:layout_row="0"
        android:layout_column="2"
        android:text="12/05/1989"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/btnDelete"
        style="@style/styleBtnDelete"
        android:layout_row="0"
        android:layout_column="3" />

    <ImageButton
        android:id="@+id/btnEdit"
        style="@style/styleBtnEdit"
        android:layout_row="0"
        android:layout_column="4" />

    <ImageButton
        android:id="@+id/btnDetail"
        style="@style/styleBtnDetail"
        android:layout_row="0"
        android:layout_column="5"
        android:layout_marginLeft="0dp" />

    <TextView
        android:layout_row="2"
        android:layout_column="0"
        android:layout_columnSpan="6"
        android:layout_columnWeight="@integer/config_navAnimTime"
        android:layout_gravity="top"
        android:height="1dp"
        android:background="#c2bfb6"
        android:gravity="top" />

</GridLayout>