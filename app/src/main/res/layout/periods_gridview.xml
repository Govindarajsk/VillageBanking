<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/maingrid"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="5"
    android:layoutDirection="locale"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtColumn1"
        style="@style/stylDgTxt"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_gravity="top"
        android:text="1."
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtColumn2"
        style="@style/stylDgTxt"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_columnWeight="@integer/config_navAnimTime"
        android:text="Period 1"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtColumn3"
        style="@style/stylDgTxt"
        android:layout_row="0"
        android:layout_column="2"
        android:layout_columnWeight="@integer/config_navAnimTime"
        android:text="12/05/1989"
        android:textSize="10dp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/txtColumn4"
        style="@style/stylDgTxt"
        android:layout_row="0"
        android:layout_column="2"
        android:layout_columnWeight="@integer/config_navAnimTime"
        android:text="12/05/1989"
        android:textSize="10dp"
        android:textStyle="bold" />

    <Button
        style="@style/stylDgbtn"
        android:height="15dp"
        android:width="15dp"
        android:layout_row="0"
        android:layout_column="3"
        android:layout_gravity="center_vertical"
        android:background="@color/design_default_color_error"
        app:backgroundTintMode="screen" />


    <TextView
        android:layout_row="2"
        android:layout_column="0"
        android:layout_columnSpan="4"
        android:layout_columnWeight="@integer/config_navAnimTime"
        android:layout_gravity="top"
        android:height="1dp"
        android:background="#c2bfb6"
        android:gravity="top" />

</GridLayout>