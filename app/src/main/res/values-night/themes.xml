<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.VillageBanking" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
      <style name="Theme.VillageBanking.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.VillageBanking.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.VillageBanking.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="editText">
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:width">220dp</item>
        <item name="android:textColor">#008</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="txtLebel" parent="@style/editText">
        <item name="android:textAlignment">viewEnd</item>
        <item name="android:width">160dp</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:layout_gravity">fill_horizontal</item>
    </style>
    <style name="btnStyle" parent="editText">
        <item name="android:width">110dp</item>
    </style>
    <style name="spnStyle" parent="editText">
    </style>


    <style name="stylText">
        <item name="android:layout_margin">5dp</item>
        <item name="android:textColor">#008</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">fill_horizontal</item>
    </style>
    <style name="stylLbl" parent="@style/stylText">
        <item name="android:textAlignment">viewEnd</item>
        <item name="android:textStyle">bold|italic</item>
    </style>
    <style name="stylBtn" parent="stylText">
    </style>
    <style name="stylSpin" parent="stylText">
    </style>
<style name="stylDgTxt">
</style>
</resources>