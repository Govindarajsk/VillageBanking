<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.VillageBanking" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.VillageBanking.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Theme.VillageBanking.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.VillageBanking.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="btnStyle" parent="editText">
        <item name="android:width">110dp</item>
    </style>

    <style name="spnStyle" parent="editText"></style>


    <style name="stylTxt">
        <item name="android:layout_margin">5dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">fill_horizontal</item>
    </style>

    <style name="stylLbl" parent="@style/stylText">
        <item name="android:textAlignment">viewEnd</item>
        <item name="android:textStyle">bold|italic</item>
    </style>

    <style name="stylSpin" parent="stylText"></style>

    <style name="stylDgTxt">
        <item name="android:layout_margin">5dp</item>
        <item name="android:textColor">#4bdeb7</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">Abadi Extra Light</item>
    </style>

    <style name="editText">
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:textColor">#050505</item>
        <item name="hintTextColor">#4bdeb7</item>
        <item name="hintEnabled">true</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginLeft">30dp</item>
    </style>

    <style name="stylDgbtn">
        <item name="android:layout_margin">0dp</item>
        <item name="android:textColor">#4bdeb7</item>
        <item name="android:textSize">1dp</item>
        <item name="fontFamily">Abadi Extra Light</item>
        <item name="android:layout_height">25dp</item>
    </style>

    <style name="styLbl">
        <item name="android:layout_margin">5dp</item>
        <item name="android:textColor">#4bdeb7</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">Abadi Extra Light</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:gravity">end</item>
    </style>

    <style name="styLblVal" parent="styLbl">
        <item name="android:gravity">start</item>
        <item name="android:layout_gravity">start</item>
    </style>
    <!--Button-->
    <style name="stylBtn">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="styleBtnDelete" parent="stylBtn">
        <item name="android:src">@drawable/ic_delete</item>
    </style>

    <style name="styleBtnReset" parent="stylBtn">
        <item name="android:src">@drawable/ic_revert</item>
        <item name="android:layout_gravity">top|right</item>
    </style>

    <style name="styleBtnDetail" parent="stylBtn">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:src">@drawable/ic_detail</item>
    </style>

    <style name="styleBtnAdd" parent="stylBtn">
        <item name="android:src">@drawable/ic_add</item>
    </style>

    <style name="styleBtnEdit" parent="stylBtn">
        <item name="android:src">@drawable/ic_edit</item>
    </style>
    <style name="styleBtnClose" parent="stylBtn">
        <item name="android:src">@drawable/ic_close</item>
    </style>

    <style name="styleBtnSave" parent="stylBtn">
        <item name="android:layout_height">42dp</item>
        <item name="android:src">@drawable/ic_save1_foreground</item>
        <item name="android:layout_gravity">top|right</item>
    </style>
    <!--End Button-->
    <style name="stylLine">
        <item name="android:layout_gravity">top</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:gravity">top</item>
    </style>
</resources>