<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.VillageBanking" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.VillageBanking.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.VillageBanking.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.VillageBanking.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />



    <style name="txtLebel">
        <item name="android:textColor">#4bdeb7</item>
        <item name="android:textAlignment">viewEnd</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:minWidth">100dp</item>
    </style>
    <style name="btnStyle" parent="editText">
        <item name="android:width">110dp</item>
    </style>
    <style name="spnStyle" parent="editText">
    </style>


    <style name="stylTxt">
        <item name="android:layout_margin">5dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">fill_horizontal</item>
    </style>
    <style name="stylLbl" parent="@style/stylText">
        <item name="android:textAlignment">viewEnd</item>
        <item name="android:textStyle">bold|italic</item>
    </style>
    <style name="stylBtn" parent="stylText">
    </style>
    <style name="stylSpin" parent="stylText">
    </style>

    <style name="stylDgTxt">
        <item name="android:layout_margin">5dp</item>
        <item name="android:textColor">#4bdeb7</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">Abadi Extra Light</item>
    </style>
    <style name="editText">
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:textColor">#050505</item>
        <item name="hintTextColor">#4bdeb7</item>
        <item name="hintEnabled">true</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginLeft">30dp</item>
    </style>

    <style name="stylDgbtn">
        <item name="android:layout_margin">0dp</item>
        <item name="android:textColor">#4bdeb7</item>
        <item name="android:textSize">1dp</item>
        <item name="fontFamily">Abadi Extra Light</item>
        <item name="android:layout_height">25dp</item>
    </style>
</resources>